{
  "id": "euDirectives",
  "endpoint": {
    "url": "https://ldf.fi/finestlaw/sparql",
    "useAuth": true,
    "prefixesFile": "SparqlQueriesPrefixes.js"
  },
  "sparqlQueriesFile": "SparqlQueriesStatutes.js",
  "baseURI": "http://data.europa.eu/eli",
  "URITemplate": "<BASE_URI>/<LOCAL_ID>",
  "facetClass": "lss:EULegalAct",
  "frontPageImage": "main_page/euDirectives.png",
  "searchMode": "faceted-search",
  "defaultActiveFacets": ["prefLabel"],
  "defaultTab": "table",
  "defaultInstancePageTab": "content",
  "resultClasses": {
    "euDirectives": {
      "paginatedResultsConfig": {
        "tabID": 0,
        "component": "ResultTable",
        "tabPath": "table",
        "tabIcon": "CalendarViewDay",
        "propertiesQueryBlock": "euDirectiveProperties",
        "pagesize": 20,
        "sortBy": null,
        "sortDirection": null
      },
      "instanceConfig": {
        "propertiesQueryBlock": "euDirectivePropertiesInstancePage",
        "instancePageResultClasses": {
          "instancePageContextualContent": {
            "tabID": 0,
            "component": "InstancePageContextualContent",
            "tabPath": "content",
            "tabIcon": "Subject"
          },
          "instancePageTable": {
            "tabID": 1,
            "component": "InstancePageTable",
            "tabPath": "table",
            "tabIcon": "CalendarViewDay"
          },
          "instancePageExport": {
            "tabID": 2,
            "component": "Export",
            "tabPath": "export",
            "tabIcon": "CloudDownload",
            "pageType": "instancePage"
          }
        }
      }
    },
    "export": {
      "tabID": 2,
      "component": "Export",
      "tabPath": "export",
      "tabIcon": "CloudDownload",
      "resultClass": "perspective1",
      "facetClass": "perspective1"
    }
  },
  "properties": [
    {
      "id": "source",
      "valueType": "object",
      "makeLink": true,
      "externalLink": true,
      "sortValues": true,
      "numberedList": false,
      "onlyOnInstancePage": true
    },
    {
      "id": "prefLabel",
      "valueType": "object",
      "makeLink": true,
      "externalLink": false,
      "sortValues": true,
      "numberedList": false,
      "minWidth": 250
    },
    {
      "id": "keyword",
      "valueType": "object",
      "makeLink": true,
      "externalLink": true,
      "sortValues": false,
      "numberedList": false
    },
    {
      "id": "statute",
      "valueType": "object",
      "makeLink": true,
      "externalLink": false,
      "sortValues": false,
      "numberedList": false,
      "enableCountryFlag": true
    }
  ],
  "facets": {
    "prefLabel": {
      "sortByPredicate": "skos:prefLabel"
    },
    "textSearch": {
      "containerClass": "one",
      "facetType": "text",
      "filterType": "textFilter"
    },
    "keyword": {
      "containerClass": "ten",
      "facetType": "hierarchical",
      "facetLabelFilter": "FILTER(LANG(?prefLabel_) = '<LANG>')",
      "filterType": "uriFilter",
      "pieChartButton": true,
      "parentProperty": "skos:broader",
      "predicate": "fes:statute/fes:eurovoc_keyword",
      "searchField": true,
      "sortButton": true,
      "sortBy": "instanceCount",
      "sortByPredicate": "fes:statute/fes:eurovoc_keyword/skos:prefLabel",
      "sortDirection": "desc"
    }
  }
}
